    "numberOfAyahs": 49,
    "ayahs": [
      {
        "number": 4736,
        "text": "ওয়াততূরি।",
        "numberInSurah": 1,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4737,
        "text": "ওয়া কিতা-বিম মাছতূর।",
        "numberInSurah": 2,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4738,
        "text": "ফী-রাক্কিম মানশূর।",
        "numberInSurah": 3,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4739,
        "text": "ওয়াল বাইতিল মা‘মূর।",
        "numberInSurah": 4,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4740,
        "text": "ওয়াছছাকফিল মারফূ‘।",
        "numberInSurah": 5,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4741,
        "text": "ওয়াল বাহরিল মাছজূর।",
        "numberInSurah": 6,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4742,
        "text": "ইন্না ‘আযা-বা রাব্বিকা লাওয়া-কি‘।",
        "numberInSurah": 7,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4743,
        "text": "মা-লাহূমিন দা-ফি‘।",
        "numberInSurah": 8,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4744,
        "text": "ইয়াওমা তামূরুছ ছামাউ মাওরা-।",
        "numberInSurah": 9,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4745,
        "text": "ওয়া তাছীরুল জিবা-লুছাইরা-।",
        "numberInSurah": 10,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4746,
        "text": "ফাওয়াইলুইঁ ইয়াওমাইযিলিললমুকাযযিবীন।",
        "numberInSurah": 11,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4747,
        "text": "আল্লাযীনা হুম ফী খাওদিইঁ ইয়াল‘আবূন।",
        "numberInSurah": 12,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4748,
        "text": "ইয়াওমা ইউদা‘‘ঊনা ইলা-না-রি জাহান্নামা দা‘‘আ-।",
        "numberInSurah": 13,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4749,
        "text": "হা-যিহিন্না-রুল্লাতী কুনতুম বিহা-তুকাযযিবূন।",
        "numberInSurah": 14,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4750,
        "text": "আফাছিহরুন হা-যাআম আনতুম লা-তুবসিরূন।",
        "numberInSurah": 15,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4751,
        "text": "ইসলাওহা-ফাসবিরূআওলা-তাসবিরূ ছাওয়াউন ‘আলাইকুম ইন্নামা-তুজঝাওনা মা-কুনতুম তা‘মালূন।",
        "numberInSurah": 16,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4752,
        "text": "ইন্নাল মুত্তাকীনা ফী জান্না-তিওঁ ওয়া না‘ঈম।",
        "numberInSurah": 17,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4753,
        "text": "ফা-কিহীনা বিমাআ-তা-হুম রাব্বুহুম ওয়া ওয়াকা-হুম রাব্বুহুম ‘আযা-বাল জাহীম।",
        "numberInSurah": 18,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4754,
        "text": "কুলূওয়াশরাবূহানীআম বিমা-কুনতুম তা‘মালূন।",
        "numberInSurah": 19,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4755,
        "text": "মুত্তাকিঈনা ‘আলা-ছুরুরিম মাসফূফাতিওঁ ওয়াঝাওওয়াজনা-হুম বিহূরিন ‘ঈন।",
        "numberInSurah": 20,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4756,
        "text": "ওয়াল্লাযীনা আ-মানূওয়াত্তাবা‘আতহুম যুররিইইয়াতুহুম বিঈমা-নিন আলহাকনা-বিহিম যুররিইইয়াতাহুম ওয়ামাআলাতনা-হুম মিন ‘আমালিহিম মিন শাইয়িন কুল্লুমরিইম বিমাকাছাবা রাহীন।",
        "numberInSurah": 21,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4757,
        "text": "ওয়া আম দাদ না-হুম বিফা-কিহাতিওঁ ওয়া লাহমিম মিম্মা-ইয়াশতাহূন।",
        "numberInSurah": 22,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4758,
        "text": "ইয়াতানা-ঝা‘ঊনা ফীহা-কা’ছাল লা-লাগউন ফীহা-ওয়ালা-তা’ছীম।",
        "numberInSurah": 23,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4759,
        "text": "ওয়া ইয়াতূফু‘আলাইহিম গিলমা-নুল্লাহুম কাআন্নাহুম লু’লুউম মাকনূন।",
        "numberInSurah": 24,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4760,
        "text": "ওয়া আকবালা বা‘দুহুম ‘আলা-বা‘দিইঁ ইয়াতাছাআলূন।",
        "numberInSurah": 25,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4761,
        "text": "কা-লূইন্না-কুন্না-কাবলুফীআহলিনা-মুশফিকীন।",
        "numberInSurah": 26,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4762,
        "text": "ফামান্নাল্লা-হু ‘আলাইনা-ওয়া ওয়াকা-না ‘আযা-বাছছামূম।",
        "numberInSurah": 27,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4763,
        "text": "ইন্না-কুন্না-মিন কাবলুনাদ‘ঊহু ইন্নাহূহুওয়াল বাররুর রাহীম।",
        "numberInSurah": 28,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 458,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4764,
        "text": "ফাযাক্কির ফামাআনতা বিনি‘মাতি রাব্বিকা বিকা-হিনিওঁ ওয়ালা-মাজনূন।",
        "numberInSurah": 29,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4765,
        "text": "আম ইয়াকূলূনা শা-‘ইরুন নাতারাব্বাসুবিহী রাইবাল মানূন।",
        "numberInSurah": 30,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4766,
        "text": "কুল তারাব্বাসূফাইন্নী মা‘আকুম মিনাল মুতারাব্বিসীন।",
        "numberInSurah": 31,
        "juz": 27,
        "manzil": 7,
        "page": 524,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4767,
        "text": "আম তা’মুরুহুম আহলা-মুহুম বিহা-যাআম হুম কাওমুন তা-গূন।",
        "numberInSurah": 32,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4768,
        "text": "আম ইয়াকূলূনা তাকাওওয়ালাহূ বাল্লা-ইউ’মিনূন।",
        "numberInSurah": 33,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4769,
        "text": "ফালইয়া’তূবিহাদীছিম মিছলিহীইন কা-নূসা-দিকীন।",
        "numberInSurah": 34,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4770,
        "text": "আম খুলিকূমিন গাইরি শাইয়িন আম হুমুল খা-লিকূন।",
        "numberInSurah": 35,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4771,
        "text": "আম খালাকুছ ছামা-ওয়া-তি ওয়াল আরদা বাল্লা-ইঊকিনূন।",
        "numberInSurah": 36,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4772,
        "text": "আম ‘ইনদাহুম খাঝাইনুরাব্বিকা আম হুমুল মুসাইতিরূন।",
        "numberInSurah": 37,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4773,
        "text": "আম লাহুম ছুল্লামুইঁ ইয়াছতামি‘ঊনা ফীহি ফালইয়া’তি মুছতামি‘উহুম বিছুলতা-নিম মুবীন।",
        "numberInSurah": 38,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4774,
        "text": "আম লাহুল বানা-তুওয়া লাকুমুল বানূন।",
        "numberInSurah": 39,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4775,
        "text": "আম তাছআলূহুম আজরান ফাহুম মিম মাগরামিম মুছকালূন।",
        "numberInSurah": 40,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4776,
        "text": "আম ‘ইনদা হুমুল গাইবুফাহুম ইয়াকতুবূন।",
        "numberInSurah": 41,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4777,
        "text": "আম ইউরীদূ না কাইদান ফাল্লাযীনা কাফারূহুমুল মাকীদূ ন।",
        "numberInSurah": 42,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4778,
        "text": "আম লাহুম ইলা-হুন গাইরুল্লা-হি ছুবহা-নাল্লা-হি ‘আম্মা-ইউশরিকূন।",
        "numberInSurah": 43,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4779,
        "text": "ওয়া ইয়ঁইয়ারাও কিছফাম মিনাছছামাই ছা-কিতাইঁ ইয়াকূলূছাহা-বুম মার কূম।",
        "numberInSurah": 44,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4780,
        "text": "ফাযারহুম হাত্তা-ইউলা-কূইয়াওমাহুমুল্লাযী ফীহি ইউস‘আকূন।",
        "numberInSurah": 45,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4781,
        "text": "ইয়াওমা লা-ইউগনী ‘আনহুম কাইদুহুম শাইআওঁ ওয়ালা-হুম ইউনসারূন।",
        "numberInSurah": 46,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4782,
        "text": "ওয়া ইন্না লিল্লাযীনা জালামূ‘আযা-বান দূনা যা-লিকা ওয়ালা-কিন্না আকছারাহুম লাইয়া‘লামূন।",
        "numberInSurah": 47,
        "juz": 27,
        "manzil": 7,
        "page": 525,
        "ruku": 459,
        "hizbQuarter": 210,
        "sajda": false
      },
      {
        "number": 4783,
